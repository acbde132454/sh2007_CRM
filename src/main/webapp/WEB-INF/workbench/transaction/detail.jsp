	<script>

		//刷新图标
		function refresh(data){
			var content = "阶段&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;";
			//记录当前阶段的索引位置，只有锚点和红x两个地方是当前阶段
			var position = 0;
			//拼接后台的数据
			for(var i = 0; i < data.length; i++){
				var type = data[i].type;
				var text = data[i].text;
				var possibility = data[i].possibility;
				var index = data[i].index;
				if("绿圈" == type){
					content += "<span index="+index+" class=\"glyphicon glyphicon-ok-circle mystage\" data-toggle=\"popover\" data-placement=\"bottom\" data-content=\""+text+" "+possibility+"\" style=\"color: #90F790;\"></span>";
				}else if("锚点" == type){
					position = i;
					content += "<span index="+index+" class=\"glyphicon glyphicon-map-marker mystage\" data-toggle=\"popover\" data-placement=\"bottom\" data-content=\""+text+" "+possibility+"\" style=\"color: #90F790;\"></span>";
				}else if("黑圈" == type){
					content += "<span index="+index+" class=\"glyphicon glyphicon-record mystage\" data-toggle=\"popover\" data-placement=\"bottom\" data-content=\""+text+" "+possibility+"\"></span>";
				}else if("红x" == type){
					position = i;
					content += "<span index="+index+" class=\"glyphicon glyphicon-remove-circle mystage\" data-toggle=\"popover\" data-placement=\"bottom\" data-content=\""+text+" "+possibility+"\" style='color:red'></span>";
				}else if("黑x" == type){
					content += "<span index="+index+" class=\"glyphicon glyphicon-remove-circle mystage\" data-toggle=\"popover\" data-placement=\"bottom\" data-content=\""+text+" "+possibility+"\"></span>";
				}
				content += "-----------";
			}
			content += new Date().toLocaleDateString();
			$('#stageDiv').html(content);
			//修改详情页的阶段和可能性
			$('#stage').text(data[position].text);
			$('#possibility').text(data[position].possibility);
			//阶段提示框
			$(".mystage").popover({
				trigger:'manual',
				placement : 'bottom',
				html: 'true',
				animation: false
			}).on("mouseenter", function () {
				var _this = this;
				$(this).popover("show");
				$(this).siblings(".popover").on("mouseleave", function () {
					$(_this).popover('hide');
				});
			}).on("mouseleave", function () {
				var _this = this;
				setTimeout(function () {
					if (!$(".popover:hover").length) {
						$(_this).popover("hide")
					}
				}, 100);
			});
		}

		$.post("/crm/workbench/transaction/queryStage",{'id':'${transaction.id}'},function (data) {
			refresh(data);
			//给每个图标绑定单击事件
			$('#stageDiv').on('click','span',function () {
				//发送异步请求，把当前阶段在集合中的索引传给后台
				$.get("/crm/workbench/transaction/queryStage",{
					'index' : $(this).attr('index'),
					'id':'${transaction.id}'
				},function (data) {
					//刷新图标
					refresh(data);
					//再次查询交易对应的历史记录
					$.post("/crm/workbench/transaction/queryHistories",{'id':'${transaction.id}'},function (data) {
						//java:编译型语言 js:解释型语言
						var content;
						for(var i = 0; i < data.length;i++){
							content += "<tr>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].stage+"</td>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].money+"</td>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].possibility+"</td>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].expectedDate+"</td>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].createTime+"</td>\n" +
									"\t\t\t\t\t\t\t<td>"+data[i].createBy+"</td>\n" +
									"\t\t\t\t\t\t</tr>";
							//append方法每次都会把当前页面的所有dom元素都重新生成
							//$('#historyBody').append();
						}
						$('#historyBody').html(content);
					},'json');
				},'json');
			});
		},'json');
	</script>
